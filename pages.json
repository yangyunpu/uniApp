{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},

	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app",
				"enablePullDownRefresh": true // 开启下拉刷新
			}
		}
	    ,{
            "path" : "pages/write/write",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "写作",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/my/my",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false //是否下拉刷新
				// "app-plus":{
				// 	"titleNView":false    //去掉当前页的顶部导航栏
				// },
				// "navigationBarBackgroundColor":"#FFFFFF" //自定义的背景颜色
				// "navigationBarTextStyle":"white"  //状态栏字体颜色

            }
            
        }
        ,{
            "path" : "pages/login/login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/setting/setting",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "安全设置",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/my/editInfo",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人信息",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#FFFFFF", // 导航栏背景颜色
		"backgroundColor": "#F8F8F8", // 窗口的背景色
		"backgroundColorTop":"#FFFFFF" // 仅iOS APP真机bounce回弹区域默认灰色,建议统一重置为白色
	},
	"tabBar" : {
	    "color" : "#707070",
	    "selectedColor" : "#DE533A",
	    "list" : [
	        {
	            "pagePath" : "pages/index/index",
	            "text" : "首页",
	            "iconPath" : "static/nav1.png",
	            "selectedIconPath" : "static/nav1-a.png"
	        },
	        {
	            "pagePath" : "pages/write/write",
	            "text" : "写作",
	            "iconPath" : "static/nav2.png",
	            "selectedIconPath" : "static/nav2-a.png"
	        },
	        {
	            "pagePath" : "pages/my/my",
	            "text" : "我的",
	            "iconPath" : "static/nav3.png",
	            "selectedIconPath" : "static/nav3-a.png"
	        }
	    ]
	}
}
